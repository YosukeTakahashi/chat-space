.chat-main__message-list__userid{data: {message: {id: message.id}}}
  .chat-main__message-list__userid__user-talk
    .chat-main__message-list__userid__user-talk__talker
      = message.user.name
    .chat-main__message-list__userid__user-talk__talk-date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__message-list__userid__user-Chat
    - if message.content.present?
      %p.Message__content
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?